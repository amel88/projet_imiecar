{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form ":FormTemplate:bootstrap_3_layout.html.twig" %}
<link rel="stylesheet" href="{{ asset('connect/css/style.css') }}">
<style>
    form {
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        padding: 10px;
        padding-top: 15px;
    }
</style>
<div class="container " style="color: #ffb900">
    <div class="title" style="padding-bottom: 35px">ImieCar</div>
    <script src="{{ asset('connect/js/jquery.min.js') }}"></script>
    <script src="{{ asset('connect/js/index.js') }}"></script>

    <div class="row ">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <p class="form-horizontal col-sm-12" id="login-form">
               {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
               <label class="form-group has-feedback has-feedback-left "><h4>Changer de mot de passe:</h4></label>
               <br>
                  <p>{{ form_widget(form.current_password,{ 'attr': { 'placeholder': 'Encien mot de passe'} }) }}</p>
                  <p>{{ form_widget(form.plainPassword.first,{ 'attr': { 'placeholder': 'Nouveau mot de passe'} }) }}</p>
                  <p>{{ form_widget(form.plainPassword.second,{ 'attr': { 'placeholder': 'Répéter le nouveau mot de passe'} }) }}</p>
            <div>
            <hr>

                <button type="button" class="btn-primary btn btn-md" style="color: white"
                        onClick="location.href='/'">{{ 'Retour' }}</button>
                <button type="submit" class="btn-success btn btn-md">{{ 'Validez' }}</button>
            </div>

               {{ form_end(form) }}
        </div>
    </div>
</div>
