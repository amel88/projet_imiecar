{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form ":FormTemplate:bootstrap_3_layout.html.twig" %}
<style>
    form {
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        padding: 10px;
        padding-top: 15px;
    }
</style>
<div id="top">
    <h1> ImieCar </h1>
    <h2>Nouvelle utilisateur</h2>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                {{ form_start(form, {'method': 'POST', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register','style':'padding-bottom 0px'}}) }}
                    {{ form_widget(form.lastname,{ 'attr': { 'placeholder': 'Nom'} }) }}
                    {{ form_widget(form.firstname,{ 'attr': { 'placeholder': 'Prénom'} }) }}
                    {{ form_widget(form.username,{ 'attr': { 'placeholder': 'Nom d\'utilisateur'} }) }}
                    {{ form_widget(form.idCampus,{ 'attr': { 'placeholder': 'Campus'} }) }}
                    <hr>
                    {{ form_widget(form.email,{ 'attr': { 'placeholder': 'email'} }) }}
                    <hr>
                    {{ form_widget(form.plainPassword.first,{ 'attr': { 'placeholder': 'Mot de passe'} }) }}
                    {{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Vérification'} }) }}
                    <div style="margin-top: 30px">

                        {#<hr style="padding-bottom:px">#}
                        <button type="button" class="btn-warning btn btn-md col-sm-6"  onClick="location.href='/'"><STRONG>Annulez</STRONG></button>
                        <button type="submit" class="btn-success btn btn-md col-sm-6"><STRONG>Validez</STRONG></button> <br> <br>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


