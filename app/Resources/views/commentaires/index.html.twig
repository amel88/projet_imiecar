{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaires list</h1>

    <table>
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Date</th>
                {#<th>commentaire</th>#}
                {#<th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                {#<td><a href="{{ path('commentaires_show', { 'id': commentaire.id }) }}">{{ commentaire.id }}</a></td>#}
                <td>{% if commentaire.date %}{{ commentaire.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ commentaire.text }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commentaires_show', { 'id': commentaire.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('commentaires_edit', { 'id': commentaire.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commentaires_new') }}">Create a new commentaire</a>
        </li>
    </ul>
{% endblock %}
