{% extends 'base.html.twig' %}


{% block body %}
    <div id="trajet">
    <h1>Trajet creation</h1>

    {{ form_start(form) }}
        {#{{ form_widget(form) }}#}
    {{ form_row(form.date) }}
    {{ form_row(form.villeDepart) }}
    {{ form_row(form.heureDepart) }}
    <script type="text/javascript">
        function afficherSuite(id) {
            document.getElementById(id).style.display = 'block';
        }
    </script>
    <div id="inter">
        <input type="button" value="Ajouter une ville intermediaire"  onclick="afficherSuite('suite')"><br><br>
        <div id="suite" style="display: none">
    {{ form_row(form.villeIntermediaire) }}
    {{ form_row(form.heureIntermediaire) }}
        </div>
    </div>
    {{ form_row(form.villeArrivee) }}
    {{ form_row(form.heureArrivee) }}
    {{ form_row(form.nbPlaces) }}


     <br><br><input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('trajet_index') }}">Back to the list</a>
        </li>
    </ul>
    </div>
{% endblock %}
