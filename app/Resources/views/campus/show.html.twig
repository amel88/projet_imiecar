{% extends 'base.html.twig' %}

{% block body %}
    <h1>Campus</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campus.id }}</td>
            </tr>
            <tr>
                <th>Adressecampus</th>
                <td>{{ campus.adresseCampus }}</td>
            </tr>
            <tr>
                <th>Nomcampus</th>
                <td>{{ campus.nomCampus }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('campus_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('campus_edit', { 'id': campus.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
